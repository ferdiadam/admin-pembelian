<h2 style="text-align:center;">Daftar Produk Furnitur</h2>

<!-- Tombol tambah produk -->
<div style="text-align:center; margin-bottom:20px;">
  <a href="/produk/tambah"
     style="background-color:#3498db; color:white; padding:8px 15px; border-radius:5px; text-decoration:none;">
    + Tambah Produk Baru
  </a>
</div>

<table style="width:90%; margin:auto; border-collapse:collapse;">
  <thead>
    <tr style="background-color:#f2f2f2;">
      <th style="padding:10px; border:1px solid #ddd;">ID</th>
      <th style="padding:10px; border:1px solid #ddd;">Nama Produk</th>
      <th style="padding:10px; border:1px solid #ddd;">Harga</th>
      <th style="padding:10px; border:1px solid #ddd;">Deskripsi</th>
      <th style="padding:10px; border:1px solid #ddd;">Stok</th>
      <th style="padding:10px; border:1px solid #ddd;">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% produkList.forEach(function(p){ %>
      <tr>
        <td style="padding:8px; border:1px solid #ddd;"><%= p.id %></td>
        <td style="padding:8px; border:1px solid #ddd;"><%= p.nama %></td>
        <td style="padding:8px; border:1px solid #ddd;">Rp <%= p.harga.toLocaleString('id-ID') %></td>
        <td style="padding:8px; border:1px solid #ddd;"><%= p.deskripsi %></td>
        <td style="padding:8px; border:1px solid #ddd; color:<%- p.stok <= 5 ? 'red' : 'black' %>;">
          <%= p.stok %>
        </td>
        <td style="padding:8px; border:1px solid #ddd; text-align:center;">

          <!-- Tombol Tambah -->
          <a href="/produk/tambah-stok/<%= p.id %>"
             style="display:inline-block; background-color:#2ecc71; color:white; padding:6px 10px; border-radius:5px; text-decoration:none; margin:2px;">
            + Tambah
          </a>

          <!-- Tombol Kurangi -->
          <a href="/produk/kurangi-stok/<%= p.id %>"
             style="display:inline-block; background-color:#f39c12; color:white; padding:6px 10px; border-radius:5px; text-decoration:none; margin:2px;">
            âˆ’ Kurangi
          </a>

          <!-- Tombol Hapus -->
          <form action="/produk/hapus/<%= p.id %>"
                method="POST"
                style="display:inline-block; margin:2px;"
                onsubmit="return confirm('Yakin ingin menghapus produk ini?');">
            <button type="submit"
                    style="background-color:#e74c3c; color:white; padding:6px 10px; border:none; border-radius:5px; cursor:pointer;">
              ğŸ—‘ Hapus
            </button>
          </form>

        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<div style="text-align:center; margin-top:20px;">
  <a href="/"
     style="text-decoration:none; color:#333; background-color:#eee; padding:8px 15px; border-radius:5px;">
     â† Kembali ke Dashboard
  </a>
</div>
